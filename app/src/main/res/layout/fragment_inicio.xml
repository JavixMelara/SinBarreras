<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Inicio">



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <android.support.v7.widget.CardView
          android:id="@+id/Habitaciones"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginBottom="30dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="6dp"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          android:layout_marginTop="20dp"
          >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal|center_vertical"
             android:orientation="vertical"
             >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icono_opt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="¡Bienvenido Javier Melara!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

         </LinearLayout>


      </android.support.v7.widget.CardView>

      <android.support.v7.widget.GridLayout
          android:id="@+id/idGrid"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:padding="4dp"
          app:columnCount="2"
          app:rowCount="1"
          android:layout_marginBottom="20dp"
          android:layout_below="@id/Habitaciones">

         <android.support.v7.widget.CardView
             android:id="@+id/MisDispositivos"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginBottom="10dp"
             app:cardCornerRadius="8dp"
             app:cardElevation="6dp"
             app:layout_columnWeight="1"
             app:layout_rowWeight="1"
             android:foreground="?selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/MiNivel"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Mi nivel"
                   android:textAlignment="center"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="8dp"/>

               <ImageView
                   android:layout_below="@id/MiNivel"
                   android:layout_width="100dp"
                   android:layout_height="100dp"

                   android:layout_centerInParent="true"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/n3_opt" />



            </RelativeLayout>

         </android.support.v7.widget.CardView>


         <android.support.v7.widget.CardView
             android:id="@+id/Consumo"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginBottom="10dp"
             app:cardCornerRadius="8dp"
             app:cardElevation="6dp"
             app:layout_columnWeight="1"
             app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/MiGrupo"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Mi grupo"
                   android:textAlignment="center"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="8dp"/>

               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/n4"
                   android:layout_below="@+id/MiGrupo"/>



            </RelativeLayout>

         </android.support.v7.widget.CardView>



      </android.support.v7.widget.GridLayout>



      <android.support.v7.widget.GridLayout
          android:id="@+id/idGrid2"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:padding="4dp"
          app:columnCount="2"
          app:rowCount="1"
          android:layout_below="@+id/idGrid">

         <android.support.v7.widget.CardView
             android:id="@+id/Rutinas"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginBottom="10dp"
             app:cardCornerRadius="8dp"
             app:cardElevation="6dp"
             app:layout_columnWeight="1"
             app:layout_rowWeight="1"
             android:foreground="?selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:layout_centerHorizontal="true"
                   android:text="Mi horario"
                   android:textAlignment="center"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <TextView
                android:id="@+id/dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="LUNES"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
               <TextView
                   android:id="@+id/hora"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:text="9:00 - 11:00 AM"
                   android:textAlignment="center"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:layout_below="@id/dia"
                   android:textColor="#000000"

                   />



            </RelativeLayout>

         </android.support.v7.widget.CardView>


         <android.support.v7.widget.CardView
             android:id="@+id/Ajustes"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginBottom="10dp"
             app:cardCornerRadius="8dp"
             app:cardElevation="6dp"
             app:layout_columnWeight="1"
             app:layout_rowWeight="1"
             android:foreground="?selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/SeniaDiaria"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Seña diaria"
                   android:textAlignment="center"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="8dp"/>

               <ImageView
                   android:layout_below="@+id/SeniaDiaria"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/senia_diaria" />



            </RelativeLayout>

         </android.support.v7.widget.CardView>



      </android.support.v7.widget.GridLayout>

   </RelativeLayout>





</ScrollView>